{
  "comment": "OLD PREVIEW ENVIRONMENT CONFIGURATION - SUPERSEDED",
  "note": "This configuration was used when we had separate preview branches with preview.* subdomains",
  "archived": "October 2025",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "regions": ["iad1"],
  "functions": {
    "app/**/*.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/tools-domain/$1",
      "has": [
        {
          "type": "host",
          "value": "tools.bonnevalsolutions.com"
        }
      ]
    },
    {
      "comment": "OLD PREVIEW LOGIC - No longer needed",
      "source": "/(.*)",
      "destination": "/tools-domain/$1",
      "has": [
        {
          "type": "host",
          "value": "preview-tools.bonnevalsolutions.com"
        }
      ]
    },
    {
      "comment": "OLD PREVIEW LOGIC - No longer needed",
      "source": "/(.*)",
      "destination": "/$1",
      "has": [
        {
          "type": "host",
          "value": "preview.bonnevalsolutions.com"
        }
      ]
    }
  ],
  "headers": [
    {
      "source": "/tools-domain/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ]
}

